@using System.Collections;

@if (ShowDialog)
{
<div class="modal modal-signin position-static d-block bg-secondary py-5" tabindex="-1" role="dialog" id="modalSignin">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow" style="padding-bottom: 5px">
      
        <div class="modal-header p-1 r pb-3 border-bottom-0"></div>

          <div class="form-group" style="margin-left: .5rem; margin-right: .5rem">
            <div class="row">
            Test message, you must make a decision, pick from the below
            </div>
        </div>
          

        <div style="margin: .5rem;">

                    @foreach(KeyValuePair<int, string> kvp in Decisions)
                    {
                        <button type="button" onclick="Select(@kvp.Key)" class="btn btn-primary" 
                            style="width: 100px">@kvp.Value</button> <br/> 
                    }

        </div>                  
              
          
     
    </div>
  </div>
</div>
}

@code {

    public bool ShowDialog = false;

    public Dictionary<int, String> Decisions = new Dictionary<int, String>();

    public void Select(int Key)
    {
        throw new NotImplementedException();
    }

    public void Close()
    {
        ShowDialog = false;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        Decisions.Add(1, "test 1");
        Decisions.Add(2, "test two");
    }
    

}
