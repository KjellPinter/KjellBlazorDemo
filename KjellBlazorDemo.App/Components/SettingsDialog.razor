@using KjellBlazorDemo.Engine.Models
@using KjellBlazorDemo.Engine
@using KjellBlazorDemo.Engine.Interfaces
@using KjellBlazorDemo.App.Components
@using KjellBlazorDemo.App.Repositories
@inject HttpClient Http
@inject IPlayerManager Player
@inject Settings settings


@if (ShowDialog)
{
<div class="modal modal-signin position-static d-block bg-secondary py-5" tabindex="-1" role="dialog" id="modalSignin">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow" style="padding-bottom: 5px">
      
        <div class="modal-header p-1 r pb-3 border-bottom-0">       
        @*<button type="button" @onclick="@Close" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
      </div>

      <EditForm Model="@settings">

          <div class="form-group" style="margin-left: .5rem; margin-right: .5rem">
              <div class="row">
                <div class="col-sm col-form-label">
                    <label for="MOVEMENT_DISTANCE">Speed: </label>
                </div>
                <div class="col-sm">
                    <InputNumber id="MOVEMENT_DISTANCE" class="form-control" @bind-Value="@settings.MOVEMENT_DISTANCE"/>
                </div>
              </div>

            </div>
          
            <div class="form-group" style="margin-left: .5rem; margin-right: .5rem">
                <div class="row">
                    <div class="col-sm col-form-label">
                        <label>Character</label>
                    </div>
                    <div class="col-sm">
                        <select id="selectCharacter" class="form-control" @bind="@settings.CHARACTER">
                            @foreach(var c in Characters)
                            {
                                <option value = "@c.Id"> @c.Name </option >
                            }
}                       </select>
                    </div>
                </div>
            </div>

            <div style="margin: .5rem;">
                <button type="button" @onclick="SaveChanges" class="btn btn-primary" style="float: right; margin-right: 0px">Save Changes!</button>
                <button type="button" @onclick="@Close" class="btn btn-secondary" style="float: right; margin-right: 5px">Close</button>                
            </div>                  
              
          

      </EditForm>
     
    </div>
  </div>
</div>
}




